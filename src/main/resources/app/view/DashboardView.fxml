<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="app.controller.DashboardController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Dashboard" />
    <HBox alignment="CENTER" spacing="40">
        <VBox alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 20; -fx-background-radius: 10;">
            <Label style="-fx-font-size: 16px;" text="Total de Cursos" />
            <Label fx:id="totalCursosLabel" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="0" />
        </VBox>
        <VBox alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 20; -fx-background-radius: 10;">
            <Label style="-fx-font-size: 16px;" text="Total de Alunos" />
            <Label fx:id="totalAlunosLabel" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="0" />
        </VBox>
    </HBox>
</VBox>